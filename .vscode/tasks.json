{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make all -j$(nproc)",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        // "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true,
        "close": true,
        "revealProblems": "onProblem"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "flash",
      "type": "shell",
      "command": "make flash -j$(nproc)",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        // "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true,
        "close": true,
        "revealProblems": "onProblem"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "rebuild compiledb",
      "type": "shell",
      "command": "bear -- make all -j$(nproc) -I/usr/lib/arm-none-eabi/include",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        // "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true,
        "close": true,
        "revealProblems": "onProblem"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true,
        "close": true,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "clean build",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": [
        "clean",
        "rebuild compiledb"
      ]
    },
    {
      "label": "WSL attach USB",
      "type": "process",
      "command": "${command:uspip-connect.Attach}",
      "problemMatcher": []
    },
    {
      "label": "launch_livegdb",
      "type": "shell",
      "command": "./livegdb.sh",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": "build",
      "dependsOn":[
        "build"
      ],
      "isBackground": true
    },
  ]
}