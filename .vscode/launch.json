{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ST-Link Debug",
            "showDevDebugOutput": "none",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "executable": "./build/Robocon2024-Embedded-BoardC.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "stm32f407",
            "svdFile": "stm32f407.svd",
            "configFiles": [
                "openocd.cfg"
            ],
            "runToEntryPoint": "main",
            "rtos": "auto",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "clearSearch": false,    // OpenOCD users may have to un-comment this
                "rtt_start_retry": 500,
                "polling_interval": 20,
                "decoders": [
                    {
                        "port": 0,
                        "type": "console"
                    },
                    // {
                    //     "type": "graph",
                    //     "port": 1,      
                    //     "encoding": "float",
                    //     "graphId": "1", 
                    //     "scale": 1
                    // },
                ]
            },
            "preAttachCommands": [
                "monitor reset halt",
                "-target-download",
                "monitor go"
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4,
            },
        },
    ]
}